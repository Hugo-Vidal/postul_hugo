<p id="notice"><%= notice %></p>

<h1>Â¡Ruleta!</h1>
<br>

<table class="table text-center mb-0">
    <thead>
    <tr>
        <th>Resultado Ruleta</th>
        <th>Jugadores</th>
        <th>Apuesta Jugador</th>
        <th>Apuesta Monetaria</th>
        <th>Dinero Inicial</th>
        <th>Ingreso/Egreso</th>
        <th>Dinero Final</th>
        <th>Resultado</th>
    </tr>
    </thead>

    <tbody>
        <% @roulettes.group_by(&:game).each do |key, value| %>
            <% value.each do |player| %>
                <tr style= "background-color: #f2f2f2;">
                    <td><%= player.result %></td>
                    <td><%= player.name %></td>
                    


                    <% if player.result.to_s == "green" && player.bet.to_s == "green" %>
                        <td><%= player.bet %></td>
                        <td><%= player.wager%></td>
                        <td><%= player.money - 15*player.wager %></td>
                        <td>+<%= 15 * player.wager %></td>
                        <td><%= player.money %></td>
                        <td>Gana x15!</td>
                    <% elsif player.result.to_s == player.bet.to_s %>                        
                        <td><%= player.bet %></td>
                        <td><%= player.wager %></td>
                        <td><%= player.money - 2*player.wager %></td>
                        <td>+<%= 2 * player.wager %></td>
                        <td><%= player.money%></td>
                        <td> Gana x2!</td>
                    <% else %>
                        <td><%= player.bet %></td>
                        <td><%= player.wager %></td>
                        <td><%= player.money + player.wager %></td>
                        <td>-<%=player.wager%> </td>
                        <td><%= player.money %></td>
                        <td> Pierde! </td>
                    <% end %>
                </tr>
            <% end %>
            <th colspan="8"><br></th>
        <% end%> 
    </tbody>
</table>

<div class="mb-4"><%= link_to 'Nuevo jugador', new_player_path, class:"btn btn-info" %></div>


